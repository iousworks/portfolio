RewriteEngine On

# Force HTTPS (optional - uncomment if you want to enforce SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect .html to clean URLs (must come first)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Handle root index
RewriteRule ^$ index.html [NC,L]

# Custom redirects for specific pages
RewriteRule ^sales-portfolio$ sales-portfolio.html [NC,L]
RewriteRule ^technical-portfolio$ technical-portfolio.html [NC,L]

# Generic clean URL handler (must come last)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Prevent access to sensitive files
<Files ~ "^\.ht">
Order allow,deny
Deny from all
</Files>